<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:annotation-config/>

   <!-- Definition for student bean -->
   <bean id = "Robot" class = "com.hr.auto.Robot"/>
  
     <bean id = "Chip" class = "com.hr.auto.Chip">
     <property name = "id"  value = "11"></property>
      <property name = "type"  value = "silicon"></property>
      </bean>
      
      <bean id = "Sensor" class = "com.hr.auto.Sensor">
     <property name = "id"  value = "88"></property>
      <property name = "range"  value = "hhhh"></property>
      
      <!-- try without passing age and check the result -->
      <!-- property name = "age"  value = "11"-->
   </bean>

</beans>